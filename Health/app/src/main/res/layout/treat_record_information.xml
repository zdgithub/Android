<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/LightBlue"
        android:textAppearance="@style/white_25"
        android:text="诊 疗 记 录"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
    <TextView
        android:id="@+id/treat_record_hospital_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="西京医院"
        android:textAppearance="@style/black_20" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主治科室："
                android:textAppearance="@style/black_15" />

            <TextView
                android:id="@+id/treat_record_department_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="骨科"
                android:textAppearance="@style/black_15" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主治医师："
                android:textAppearance="@style/black_15"
                />
            <TextView
                android:id="@+id/treat_record_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沈巍"
                android:textAppearance="@style/black_15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="诊疗时间："
                android:textAppearance="@style/black_15" />
            <TextView
                android:id="@+id/treat_record_date_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-8-20"
                android:textAppearance="@style/black_15" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="病状描述："
            android:textAppearance="@style/black_15"
            />

        <TextView
            android:id="@+id/treat_record_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/treat_edit_shadow"
            android:elevation="5dp"
            android:padding="10dp"
            android:text="症状不明显，一切正常"
            android:textAppearance="@style/black_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="诊断结果："
            android:textAppearance="@style/black_15"
            />
        <TextView
            android:id="@+id/treat_record_result"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/treat_edit_shadow"
            android:padding="10dp"
            android:elevation="5dp"
            android:text="吃药"
            android:textAppearance="@style/black_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="是否有复诊："
            android:textAppearance="@style/black_15"
            />
        <TextView
            android:id="@+id/treat_record_again"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/treat_edit_shadow"
            android:padding="10dp"
            android:elevation="5dp"
            android:text="否"
            android:textAppearance="@style/black_15"
            />
    </LinearLayout>
</LinearLayout>