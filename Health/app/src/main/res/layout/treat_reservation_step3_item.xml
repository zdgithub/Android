<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/treat_reservation_doctor_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/treat_man_doctor"/>
        <TextView
            android:id="@+id/treat_reservation_doctor_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="沈巍"
            android:textAppearance="@style/black_20" />
    </LinearLayout>
    <TextView
        android:id="@+id/treat_reservation_indication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="主治：优生优育，产前诊断，不孕症"
        android:textAppearance="@style/black_15"/>
</LinearLayout>