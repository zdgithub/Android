<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treat_dialog_appear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:layout_marginLeft="10dp"
        android:textAppearance="@style/black_25"/>
    <TextView
        android:id="@+id/treat_feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="您的反馈还未提交，是否确认退出该页面？"
        android:textAppearance="@style/black_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/treat_feedback_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textAppearance="@style/blue_20"
            android:background="@drawable/treat_feedback_edit"/>

        <Button
            android:id="@+id/treat_feedback_comfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textAppearance="@style/blue_20"
            android:background="@drawable/treat_feedback_edit"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>