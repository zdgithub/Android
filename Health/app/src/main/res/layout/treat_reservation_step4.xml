<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/LightBlue"
        android:textAppearance="@style/white_25"
        android:text="选择就诊时间"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/treat_reservation_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/treat_man_doctor"/>
        <TextView
            android:id="@+id/treat_reservation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="沈巍"
            android:textAppearance="@style/black_20" />
    </LinearLayout>
    <TextView
        android:id="@+id/treat_reservation_doctor_indication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="主治：优生优育，产前诊断，不孕症"
        android:textAppearance="@style/black_15"/>

        <ListView
            android:id="@+id/treat_schedule_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/treat_information_shadow"
            android:layout_marginTop="10dp"
            android:divider="@color/Milk_white"
            android:dividerHeight="1dp"
            android:scrollbars="none">
        </ListView>

    </LinearLayout>
</LinearLayout>